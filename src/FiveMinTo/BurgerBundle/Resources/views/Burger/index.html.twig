{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Liste des Burgers</h1>

    <table class="table records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titreburger</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('burger_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.titreBurger }}</td>
                <td>
                 <a class="btn" href="{{ path('burger_show', { 'id': entity.id }) }}"><i class="icon-eye-open"></i></a>
                 <a class="btn" href="{{ path('burger_edit', { 'id': entity.id }) }}"><i class="icon-pencil"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn" href="{{ path('burger_new') }}">
       <i class="icon-plus"></i>
       Cr√©er un nouveau Burger
    </a>
{% endblock %}